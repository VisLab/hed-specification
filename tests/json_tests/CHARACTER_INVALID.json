                                }
                            }
                        },
                        "events": 
                            [
                                ["onset", "duration", "event_code", "HED"],
                                [ 4.5, 0, "show", "Description/a ʰ good"],
                                [ 5.0, 0, "ball", "Blue"]
                            ]
                    }
                ],
                "passes": [
                    {
                         "sidecar":  {
                            "event_code": {
                                "HED": {
                                    "show": "Red, Label/a"
                                }
                            }
                        },
                        "events": 
                            [
                                ["onset", "duration", "event_code", "HED"],
                                [ 4.5, 0, "show", "Description/goodness"]
                            ]
                    }
                ]
            }
        }
    }
